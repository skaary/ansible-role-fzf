# Setup fzf
# ---------
if [[ ! "$PATH" == *{{ fzf_path_git }}/bin* ]]; then
  export PATH="${PATH:+${PATH}:}{{ fzf_path_git }}/bin"
fi

# Auto-completion
# ---------------
{% if fzf_completion %}
[[ $- == *i* ]] && source "{{ fzf_path_git }}/shell/completion.bash" 2> /dev/null
{% else %}
# [[ $- == *i* ]] && source "{{ fzf_path_git }}/shell/completion.bash" 2> /dev/null
{% endif %}

# Key bindings
# ------------
{% if fzf_key_bindings %}
source "{{ fzf_path_git }}/shell/key-bindings.bash"
{% else %}
# source "{{ fzf_path_git }}/shell/key-bindings.bash"
{% endif %}
